{% extends 'layout.html.twig' %}

{% block body %}
    <h1>Paises</h1>

    <table>
        <tbody>
            <tr>
                <th>Id pais</th>
                <td>{{ paise.idPais }}</td>
            </tr>
            <tr>
                <th>Pais</th>
                <td>{{ paise.pais }}</td>
            </tr>
            <tr>
                <th>Estadopais</th>
                <td>{% if paise.estadoPais %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('paises_index') }}">Regresar a la lista</a>
        </li>
        <li>
            <a href="{{ path('paises_edit', { 'id': paise.idPais }) }}">Editar</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
