{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tipocaso list</h1>

    <table>
        <thead>
            <tr>
                <th>Idtipo</th>
                <th>Tipo</th>
                <th>Estadotipo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tipocaso in tipocasos %}
            <tr>
                <td><a href="{{ path('tipocaso_show', { 'id': tipocaso.idTipo }) }}">{{ tipocaso.idTipo }}</a></td>
                <td>{{ tipocaso.tipo }}</td>
                <td>{% if tipocaso.estadoTipo %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('tipocaso_show', { 'id': tipocaso.idTipo }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('tipocaso_edit', { 'id': tipocaso.idTipo }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tipocaso_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
